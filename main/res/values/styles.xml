<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityMainRecordPanel">
        <item name="android:elevation">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/panel_rounding</item>
        <item name="android:layout_width">@dimen/record_panel_width</item>
        <item name="android:layout_height">@dimen/record_panel_height</item>
    </style>
    <style name="ActivityMainRecordScreenButton">
        <item name="android:src">@drawable/camera_icon</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/record_button_size</item>
        <item name="android:layout_height">@dimen/record_button_size</item>
    </style>
    <style name="ActivityMainRecordAudioButton">
        <item name="android:src">@drawable/microphone_icon</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/record_button_size</item>
        <item name="android:layout_height">@dimen/record_button_size</item>
    </style>
    <style name="FilesFragmentSearchText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/panel_rounding</item>
        <item name="android:queryHint">Search Videos</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>
</resources>